        <!-- Opci贸n 2 -->
        <RadioButton x:Name="Opcion2"
                     FontSize="16"
                     Value="1" 
                     GroupName="opciones" />

        <!-- Opci贸n 3 -->
        <RadioButton x:Name="Opcion3"
                     FontSize="16"
                     Value="2" 
                     GroupName="opciones" />

        <!-- Bot贸n para validar respuesta -->
        <Button Text="Validar" 
                FontAttributes="Bold" 
                FontSize="16" 
                BackgroundColor="LightBlue"
                TextColor="White"
                Clicked="OnValidateClicked"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand" />

    </StackLayout>
</ContentPage>